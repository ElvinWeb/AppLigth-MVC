@model Worker
<style>
    .form-container {
        padding: 50px;
        max-width: 600px;
        border-radius: 5px;
    }
</style>
<div class="container form-container shadow">
    <h1 class="title">Update a Worker</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">FullName</label>
            <input asp-for="FullName" class="form-control">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input asp-for="Position" class="form-control">
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Image" class="form-label">Image</label>
            <input asp-for="Image" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-info" asp-action="index" asp-controller="worker">Back To Home</a>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>